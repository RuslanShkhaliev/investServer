{
  "compilerOptions": {
    "module": "es2022",
    "lib": [
      "ESNext"
    ],
    "types": [
      "@types/node"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "es5",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true
  },
  "include": ["./src/**/*"]
}
